<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8" data-controller="preview">
      <div class="bg-white rounded-lg shadow-sm p-8">
        <%= form_with(model: @news_letter, local: true) do |f| %>
          <div class="mb-6">
            <%= f.label :email_template_id, "Select Email Template", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.collection_select :email_template_id, @email_templates, :id, :template_name, 
                { prompt: "Choose a template" }, 
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                data: { action: "change->preview#updatePreview" } %>
          </div>

          <div class="mb-6">
            <%= f.label :body, "Newsletter Content", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :body, rows: 10, 
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                data: { action: "input->preview#updatePreview" } %>
          </div>

          <div class="flex justify-end">
            <%= f.submit "Create Newsletter", class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
          </div>
        <% end %>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Preview</h2>
        <div class="border rounded-lg p-4">
          <h3 class="text-lg font-medium mb-2" data-preview-target="title"></h3>
          <div class="prose whitespace-pre-wrap" data-preview-target="body"></div>
        </div>
      </div>
    </div>
  </div>
</div>
